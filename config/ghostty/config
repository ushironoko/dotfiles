# Ghostty Configuration

# https://ghostty.org/docs/config

# Theme (light:dark format for automatic switching)

theme = light:Catppuccin Latte,dark:Catppuccin Mocha
background-opacity = 0.9
background-blur-radius = 30
background = 1c1918

# Font

font-family = Osaka−等幅
font-size = 15
font-thicken = true

# Window

window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
window-save-state = always
window-inherit-working-directory = true

# Cursor

cursor-style = underline
cursor-style-blink = false

# Shell

shell-integration = detect
copy-on-select = clipboard

# Behavior

quit-after-last-window-closed = true

# Scrollbar (requires Ghostty 1.3.0+)

scrollbar = never

# Global keybind: Cmd+Esc to toggle visibility (show/hide all windows)

keybind = global:super+escape=toggle_visibility

# Quick Terminal (Quake-style drop-down terminal)
# Cmd+T to toggle quick terminal from anywhere

keybind = global:super+t=toggle_quick_terminal
quick-terminal-position = right
quick-terminal-size = 40%
quick-terminal-animation-duration = 0.1
quick-terminal-autohide = true

# macos
macos-titlebar-style = tabs
macos-option-as-alt = true

# スプリット移動
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom

# 行頭・行末移動 (Cmd+左右 → Home/End)
keybind = super+left=text:\x1b[H
keybind = super+right=text:\x1b[F
