{
  "name": "dotfiles",
  "version": "2.0.0",
  "description": "Personal dotfiles management tool",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "test": "vitest run",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "bun run lint && bun run typecheck && bun run test",
    "install:local": "bun link"
  },
  "dependencies": {
    "gunshi": "0.26.3",
    "chalk": "5.3.0"
  },
  "devDependencies": {
    "@types/bun": "1.2.2",
    "@types/node": "22.10.6",
    "oxlint": "0.15.2",
    "typescript": "5.7.3",
    "vitest": "3.2.4"
  }
}
