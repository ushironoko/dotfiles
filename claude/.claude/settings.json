{
  "alwaysThinkingEnabled": true,
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "async": true,
            "command": "\/Applications\/asuku.app\/Contents\/MacOS\/asuku-hook notification",
            "type": "command"
          }
        ],
        "matcher": ".*"
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "\/Applications\/asuku.app\/Contents\/MacOS\/asuku-hook permission-request",
            "timeout": 300,
            "type": "command"
          }
        ],
        "matcher": ".*"
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "jq -r '.tool_input.file_path | select(endswith(\".js\") or endswith(\".ts\"))' | ~\/.claude\/hooks\/post_tool_use\/coding_cycle.sh",
            "timeout": 10,
            "type": "command"
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(mise:*)",
      "Read(**)",
      "Read(~\/.bashrc)",
      "Read(~\/.zshrc)",
      "mcp__mcpdoc"
    ]
  },
  "plansDirectory": ".\/plans",
  "statusLine": {
    "command": "if [ -x '\/Applications\/asuku.app\/Contents\/MacOS\/asuku-hook' ]; then '\/Applications\/asuku.app\/Contents\/MacOS\/asuku-hook' statusline | ~\/.claude\/statusline.sh; else ~\/.claude\/statusline.sh; fi",
    "padding": 0,
    "type": "command"
  }
}
