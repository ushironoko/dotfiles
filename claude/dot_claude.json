{
  "mcpServers": {
    "gistdex": {
      "command": "npx",
      "args": ["@ushironoko/gistdex@latest", "--mcp"],
      "env": {
        "NODE_NO_WARNINGS": "1"
      }
    },
    "gemini-google-search": {
      "command": "npx",
      "args": ["mcp-gemini-google-search"],
      "env": {
        "GEMINI_MODEL": "gemini-2.5-flash"
      }
    },
    "readability": {
      "command": "npx",
      "args": ["-y", "@mizchi/readability", "--mcp"]
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${PWD}",
        "--enable-web-dashboard",
        "false"
      ],
      "env": {}
    },
    "hitl": {
      "command": "human-in-the-loop",
      "args": [
        "--discord-channel-id",
        "${DISCORD_CHANNEL_ID}",
        "--discord-user-id",
        "${DISCORD_USER_ID}"
      ],
      "description": "install with `cargo install --git https://github.com/KOBA789/human-in-the-loop.git`"
    }
  }
}
