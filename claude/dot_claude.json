{
  "mcpServers": {
    "gistdex": {
      "command": "npx",
      "args": ["@ushironoko/gistdex@latest", "--mcp"],
      "env": {
        "NODE_NO_WARNINGS": "1"
      }
    },
    "readability": {
      "command": "npx",
      "args": ["-y", "@mizchi/readability", "--mcp"]
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${PWD}",
        "--enable-web-dashboard",
        "false"
      ],
      "env": {}
    },
    "mcpdoc": {
      "command": "uvx",
      "args": [
        "--from",
        "mcpdoc",
        "mcpdoc",
        "--json",
        "${HOME}/.config/mcpdoc/mcpdoc-sources.json",
        "--transport",
        "stdio"
      ],
      "description": "Documentation server for llms.txt files"
    }
  }
}
